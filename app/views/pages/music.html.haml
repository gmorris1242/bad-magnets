= content_for :title, 'Music | Bad Magnets'
= content_for :description, 'Download and stream the latest Bad Magnets music.'

#music
  %section.mb-4
    .row.vert-align-center
      .column.lg-5.lg-offset-1.lg-push-5(data-aos="fade-left" data-aos-duration="500" data-aos-easing="ease-in-out" data-aos-delay="0")
        = image_tag 'BM_EP_I.jpg'
      .column.lg-5.lg-text-center.lg-pull-5(data-aos="fade-right" data-aos-duration="500" data-aos-easing="ease-in-out" data-aos-delay="0")
        .text-left.inline-block.p-2
          %h2.header I
          %ul#selector
            %li.text 1. Bullshit
            %li.text 2. Rampage
            %li.text 3. Sensy
            %li.text 4. What We Left Behind
            %li.text &copy; 2019
          .links
            = link_to 'https://open.spotify.com/album/1EzNLJMUmHB7wUvn8HtRUA', target: '_blank' do
              %i.fab.fa-spotify
            = link_to 'https://play.google.com/store/music/album/Bad_Magnets_I?id=Btpn7ds5tkr27z37ozaj27jv63y', target: '_blank' do
              %i.fab.fa-google-play
            = link_to 'https://music.apple.com/us/album/i-ep/1480181565', target: '_blank' do
              %i.fab.fa-itunes
            = link_to 'https://badmagnets.bandcamp.com/album/i', target: '_blank' do
              %i.fab.fa-bandcamp
            = link_to 'https://soundcloud.com/bad-magnets', target: '_blank' do
              %i.fab.fa-soundcloud
            = link_to 'https://www.amazon.com/gp/product/B07XXP5HJD', target: '_blank' do
              %i.fab.fa-amazon
