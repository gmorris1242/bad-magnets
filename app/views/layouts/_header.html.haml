%header
  .row(data-aos="flip-down" data-aos-duration="500" data-aos-easing="ease-in-out" data-aos-delay="0")
    .column
      %nav.left
        %ul
          %li.text= link_to 'Music', music_path
          %li.text= link_to 'News', news_path
      .logo
        = link_to root_path do
          %h1.header-logo
            = succeed 'magnets' do
              %span bad
      %nav.right
        %ul
          %li.text.relative.drop-down-link
            = link_to 'Media', '#'
            %ul.drop-down
              %li.text Coming Soon!
          %li.text= link_to 'Contact', 'mailto:admin@badmagnets.com', target: '_blank'
